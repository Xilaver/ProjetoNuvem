<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/yeti.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">

            <div class="navbar-header">
                @*  new {} para colocar algum atributo de HTML *@
                @Html.ActionLink("Gerenciador de Estoque", "Index", "Home", "Home", new { @class = "navbar-brand" })

            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                    <li>@Html.ActionLink("Produtos", "Index", "Produto")</li>
                    <li>@Html.ActionLink("Fornecedores", "Index", "Fornecedor")</li>

                </ul>

                <ul class="nav navbar-nav navbar-right">

                    <li>@Html.ActionLink("Sair", "Index", "Sair")</li>

                </ul>
            </div>

        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <hr />
    <footer style="text-align: center">
        <p>
            &copy; @DateTime.Now.Year - Gerenciador de Estoque
        </p>
    </footer>

</body>
</html>
